<?xml version="1.0" encoding='iso-8859-1' ?>
<project
	name="castle-templateengine-component"
	default="build"
	xmlns="http://nant.sf.net/release/0.85/nant.xsd"
>

	<property name="root.dir" value="../.." />
	<include buildfile="${root.dir}/common-project.xml" />

	<fileset id="buildfiles.all">
		<!-- Files have to be in dependency order -->
		<include name="Castle.Components.Common.TemplateEngine/Castle.Components.Common.TemplateEngine.build" />
		<include name="Castle.Components.Common.TemplateEngine.NVelocityTemplateEngine/Castle.Components.Common.TemplateEngine.NVelocityTemplateEngine.build" />
		<include name="Castle.Components.Common.TemplateEngine.NVelocityTemplateEngine.Tests.SR/Castle.Components.Common.TemplateEngine.NVelocityTemplateEngine.Tests.SR.build" />
		<include name="Castle.Components.Common.TemplateEngine.NVelocityTemplateEngine.Tests./Castle.Components.Common.TemplateEngine.NVelocityTemplateEngine.Tests.build" />
	</fileset>

	<target name="build" depends="common.build" />
	
	<target name="generate-assemblyinfo" depends="common.assemblyinfo" />

</project>
